<div class="modal fade" role="dialog" id="appointmentInput" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="appointmentForm" autocomplete="off" novalidate="novalidate">
                <input type="hidden" id="id">
                <div class="modal-header">
                    <h4 class="modal-title"> Add/Edit Appointment</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" maxlength="100" id="title" />
                    </div>
                    <div class="form-group">
                        <label for="descrption">Description</label>
                        <textarea type="text" class="form-control" id="description"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="">Select Patient</label>
                        <select id="patientId"
                                asp-items="@(new SelectList(ViewBag.PatientList,"Id","Name"))"
                                class="form-control">
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="appointmentDate">Start Date</label>
                        <input class="form-control" id="appointmentDate"/>
                    </div>
                    <div class="form-group">
                        <label for="">Duration</label>
                        <select id="duration"
                                asp-items="ViewBag.Duration"
                                class="form-control">
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="onCloseModal();">Close</button> &nbsp;
                    <button type="button" id="btnSubmit" class="btn btn-primary" onclick="onSubmitForm();">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>